<div>
    <form id="form" >
        <input id="title" type="text" name="title" placeholder="Nombre del producto">
        <input id="description" type="text" name="description" placeholder="Descripcion del producto">
        <input id="price" type="text" name="price" placeholder="Precio del producto">
        <button type="submit">Agregar</button>
    </form>
</div>
<div id="product-list">
    <div>
    <h1>Productos</h1>
        <ul>
            {{#each products}}
            <li>
                <p>
                    {{this.title}} - {{this.price}}
                </p>
                <button id={{this.id}} >Eliminar</button>
            </li>
            {{/each}}
        </ul>
    </div>
</div>